<%= render "devise/shared/header" %>

<div class="session-box">
  <div class="session-box-innner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>ログイン</h2>
    
      <div class="session-box-email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="session-box-password">
         <div class="a-row">
          <div class="column-left">
        <%= f.label :password %><br />
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="session-box-login">
        <%= f.submit "Log in" %>
         <div class="legal-text">
          続行することで、CultureMarketの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
     <div class="box-newusr">
      <p><span>------------</span> CultureMarketの新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "CultureMarketアカウントを作成", new_user_registration_path %>
    </div>
 </div>
</div>
 <%= render "devise/shared/footer" %>
